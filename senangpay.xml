<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.1" method="upgrade" group="hikashoppayment">
	<name>senangPay Payment Plugin for Hikashop</name>
	<creationDate>01/09/2019</creationDate>
	<version>1.0.0</version>
	<author>senangPay</author>
	<authorEmail>support@senangpay.my</authorEmail>
	<authorUrl>http://www.senangpay.my</authorUrl>
	<copyright>(C) 2019 senangPay. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your senangPay payment system</description>
	<files>
		<filename plugin="senangpay">senangpay.php</filename>
		<filename>senangpay_end.php</filename>
		<filename>logo-senangpay.png</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
